{
  "manifest_version": 3,
  "name": "Claude Quick Setup",
  "version": "1.0",
  "description": "One-click setup for Claude AI",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      }
    }
  }
}
